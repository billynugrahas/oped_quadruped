<launch>
    <!-- imu/raw -->
    <node name="mpu_node" pkg="mpu6050_driver" type="mpu6050_node" output="screen">
        <rosparam file="$(find mpu6050_driver)/config/mpu_settings.yaml" command="load"/>
    </node>

    <!-- Filter and fuse raw imu data -->
    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="imu_filter_madgwick" output="screen" respawn="false" >
        <param name="fixed_frame" value="imu_link" />
        <param name="use_mag" value="false" />
        <param name="publish_tf" value="false" />
        <param name="use_magnetic_field_msg" value="true" /> 
        <param name="world_frame" value="enu" />
        <param name="orientation_stddev" value="0.05" />
    </node>

        
    <!-- Publish static transform from base_footprint to imu_link -->
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_imu_link" args="0 0 0 0 0 0  /base_link /imu_link"/> -->
</launch>